{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "../../",
    "paths": {
      "@unfinished-world/shared": ["packages/shared/src/index.ts"],
      "@unfinished-world/engine": ["packages/engine/src/index.ts"],
      "@unfinished-world/engine/*": ["packages/engine/src/*"]
    },
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
