{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "../../",
    "paths": {
      "@/*": [
        "apps/web/src/*"
      ],
      "@unfinished-world/shared": [
        "packages/shared/src/index.ts"
      ],
      "@unfinished-world/engine": [
        "packages/engine/src/index.ts"
      ],
      "@unfinished-world/engine/*": [
        "packages/engine/src/*"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}